[flake8]
# Exclude directories
exclude = 
    .old,
    __pycache__,
    .git,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .venv,
    .env,
    .cache,
    .mypy_cache,
    .pytest_cache,
    .coverage,
    htmlcov,
    docs/_build,
    node_modules

# Configure line length
max-line-length = 127

# Configure complexity
max-complexity = 10

# Ignore certain errors
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Per-file ignores
per-file-ignores =
    # Ignore imports in __init__.py files
    __init__.py:F401,F403
    # Ignore complexity in test files
    test_*.py:C901